{
    "name": "Odoo",
    "type": "python",
    "request": "launch",
    "stopOnEntry": false,
    "pythonPath": "${config.python.pythonPath}",
    "program": "${workspaceRoot}/src/odoo/odoo-bin",
    "args": [
      "-c",
      "${workspaceRoot}/conf/odoo.conf",
      "-d",
      "database-name",
      "-u",
      "module-to-update",
      "--dev",
      "all"
    ],
    "cwd": "${workspaceRoot}",
    "console": "externalTerminal",
    "debugOptions": [
        "WaitOnAbnormalExit",
        "WaitOnNormalExit",
        "RedirectOutput"
    ]
}