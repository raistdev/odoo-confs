{
  "version": "0.2.0",
  "configurations": [
      {
        "name": "Odoo",
        "type": "python",
        "request": "launch",
        "stopOnEntry": false,
        "program": "${workspaceRoot}/src/odoo/odoo-bin",
        "args": [
          "-c",
          "${workspaceRoot}/conf/odoo.conf",
          "-d",
          "database-name",
          "-u",
          "module-to-update",
          "--dev",
          "all"
        ],
        "cwd": "${workspaceRoot}",
        "console": "externalTerminal",
      }
  ]
}